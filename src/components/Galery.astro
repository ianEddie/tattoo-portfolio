---
import { data } from '@/lib/galery-data'
---

<section
  class='min-h-screen w-full flex flex-col items-center justify-center text-center gap-10 pb-10'
>
  <h1 class='text-[#AA8C2C] font-title text-[5em]'>Trabajos</h1>
  <article class='w-[80%] flex flex-wrap gap-5 justify-center'>
    {
      data.map(({ image }) => (
        <picture class='h-[450px] w-auto aspect-[9/16]'>
          <img src={image} class='object-cover rounded-[0.8em]' />
        </picture>
      ))
    }
  </article>
</section>
<style>
  img,
  h1 {
    animation: reveal linear both;
    animation-timeline: view();
    animation-range: entry 10% cover 40%;
  }
  @keyframes reveal {
    from {
      opacity: 0;
      filter: brightness(0.1) grayscale(100%);
      scale: 0;
      translate: 0 100px;
    }
    to {
      opacity: 1;
      filter: brightness(1) grayscale(50%);
      scale: 1;
      translate: 0 0;
    }
  }
  img {
    mask-image: linear-gradient(to bottom, black 60%, transparent 100%);
  }
</style>

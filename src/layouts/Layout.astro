---
import '@fontsource-variable/wix-madefor-display'
import Header from '@/components/Header.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Artista del Tattoo' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='relative'>
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
    min-width: 0;
  }
  body {
    min-height: 100dvh;
    background-color: black;
    scroll-behavior: smooth;
  }
  h1,
  h2,
  h3,
  h4 {
    text-wrap: balance;
  }
  p {
    text-wrap: pretty;
  }
  @font-face {
    font-family: 'Lordish-Regular';
    src: url('/fonts/Lordish-Regular.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Magnificent';
    src: url('/fonts/Magnificent.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Wix Madefor Display Variable', sans-serif;
  }
</style>
